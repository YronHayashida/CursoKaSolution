<Window x:Class="CursoWpfProj.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CursoWpfProj"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0,0,2,-3">
        <Label x:Name="CodigoCursoLabel" Content="Cod do curso" HorizontalAlignment="Left" Margin="90,63,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="CodigoCursoTextBox" HorizontalAlignment="Left" Height="23" Margin="202,63,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="ExibeNomeCursoButton" Content="Exibir nome do curso" HorizontalAlignment="Left" Margin="90,128,0,0" VerticalAlignment="Top" Width="232" RenderTransformOrigin="0.24,-0.2" Height="34" Click="ExibeCurso"/>
        <TextBlock x:Name="ExibeNomeCursoTextBlock" HorizontalAlignment="Left" Margin="122,183,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>

    </Grid>
</Window>
